<Window x:Class="_.AddProcessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="添加监控进程" Height="450" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="SearchBox" 
                 Grid.Row="0"
                 Height="35"
                 Margin="0,0,0,10"
                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Style.Triggers>
                        <Trigger Property="Text" Value="">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <VisualBrush Stretch="None" AlignmentX="Left">
                                        <VisualBrush.Visual>
                                            <TextBlock Text="搜索进程..." 
                                                     Foreground="Gray"
                                                     VerticalAlignment="Center"/>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>

        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="选择CCD组:"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>
            
            <ComboBox Grid.Column="1"
                      MinWidth="120"
                      Height="30"
                      VerticalAlignment="Center"
                      ItemsSource="{Binding AvailableCcds}"
                      SelectedItem="{Binding SelectedCcd}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Key}"
                                 VerticalAlignment="Center"
                                 FontSize="14"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            
            <Button Grid.Column="2"
                    Height="30"
                    Padding="10,0"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    Command="{Binding AddCcdCommand}">
                <TextBlock Text="添加CCD组"/>
            </Button>

            <Button Grid.Column="3"
                    Height="30"
                    Padding="10,0"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    Command="{Binding EditConfigCommand}">
                <TextBlock Text="编辑配置文件"/>
            </Button>
        </Grid>

        <ListView Grid.Row="2"
                  Margin="0,0,0,10"
                  ItemsSource="{Binding FilteredProcesses}"
                  SelectedItem="{Binding SelectedProcess}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="进程名" Width="200">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ProcessName}"
                                         FontSize="14"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="确定" 
                    Command="{Binding ConfirmCommand}"
                    Margin="0,0,10,0"
                    Width="80"/>
            <Button Content="取消" 
                    Command="{Binding CancelCommand}"
                    Width="80"/>
        </StackPanel>
    </Grid>
</Window> 